@using WebNewsClients.Dtos;
@{
    var userLogin = (ViewUserDto)ViewBag.UserLogin;
}
<ul class="navbar-nav">
    @if (userLogin != null)
    {
        <li class="nav-item mt-2">
            <a id="manage" class="text-light "  title="Manage"><span class="badge bg-primary">@userLogin.DisplayName</span></a>
        </li>
        <li class="nav-item">
           
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link btn btn-warning">
                    <i class="fas fa-sign-out-alt"></i>
                    Đăng xuất
                    </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <i class="fas fa-user-plus"></i> Đăng ký
            <a class=" btn btn-primary  p-3" id="register" href="#">
                <i class="fas fa-user-plus"></i>
                Đăng ký
             </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success p-3" id="login">
                <i class="fas fa-sign-in-alt"></i>
                Đăng nhập
            </a>
        </li>
    }
</ul>