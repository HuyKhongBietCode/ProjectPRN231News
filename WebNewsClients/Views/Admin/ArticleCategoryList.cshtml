@{
    Layout = "_LayoutMainAdmin";
}
@using BusinessObjects.Models;
@using System.Text;
@using WebNewsAPIs.Dtos;
@{
    var articleCategory = ((IEnumerable<CategoriesArticle>)ViewBag.ListCategory).ToList();
}
<div class="main_content_iner overly_inner ">
    <div class="container-fluid p-0 ">

        <div class="row">
            <div class="col-12">
                <div class="page_title_box d-flex flex-wrap align-items-center justify-content-between">
                    <div class="page_title_left d-flex align-items-center">
                        <h3 class="f_s_25 f_w_700 dark_text mr_30">Dashboard</h3>
                        <ol class="breadcrumb page_bradcam mb-0">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Home</a></li>
                            <li class="breadcrumb-item active">Analytic</li>
                        </ol>
                    </div>
                    <div class="page_title_right">
                        <div class="page_date_button d-flex align-items-center">
                            <img src="img/icon/calender_icon.svg" alt>
                            August 1, 2020 - August 31, 2020
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30 pt-4">
                    <div class="white_card_body">
                        <div class="QA_section">
                            <div class="white_box_tittle list_header">
                                <h4>Danh sách phân loại </h4>
                            </div>
                            <div class="white_box_tittle list_header">
                                <div class="box_right d-flex lms_block">
                                    <div>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <label>Tên phân loại</label>
                                                <div class="common_input mb_15">
                                                    <input type="text" placeholder="Nhập nội dung...">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Miêu tả</label>
                                                <div class="common_input mb_15">
                                                    <input type="text" placeholder="Nhập nội dung...">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Ngày đăng</label>
                                                <div class="common_input mb_15">
                                                    <input type="date" value="2022-02-22">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Lần cập nhật cuối</label>
                                                <div class="common_input mb_15">
                                                    <input type="date" value="2022-02-22">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Phân loại cha</label>
                                                <select class="nice_Select2 nice_Select_line wide" style="display: none;">
                                                    <option value="0">Không có</option>
                                                    <option value="1">Thế giới</option>
                                                    <option value="1">Giải trí</option>
                                                    <option value="1">Quân sự</option>
                                                </select>
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Thứ tự</label>
                                                <select class="nice_Select2 nice_Select_line wide" style="display: none;">
                                                    <option value="1">Mặc định</option>
                                                    <option value="1">1</option>
                                                    <option value="1">2</option>
                                                    <option value="1">3</option>
                                                    <option value="1">4</option>
                                                </select>
                                            </div>
                                            <div class="col-12">
                                                <div class="create_report_btn mt_30">
                                                    <a href="#" class="btn_1 radius_btn d-block text-center">Tìm kiếm</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="QA_table mb_30">

                                <table class="table lms_table_active ">
                                    <thead>
                                        <tr>
                                            <th scope="col">Tên phân loại</th>
                                            <th scope="col">Miêu tả</th>
                                            <th scope="col">Ngày tạo</th>
                                            <th scope="col">Ngày cập nhật gần nhất</th>
                                            <th scope="col">Phân loại cha</th>
                                            <th scope="col">Thứ tự</th>
                                            <th scope="col">Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (articleCategory.Count == 0)
                                        {
                                            <div class="card border-primary mb-3" style="max-width: 100%;">
                                                <div class="card-header">Không nhận được danh sách</div>
                                            </div>
                                        }
                                        @if (articleCategory.Count != 0)
                                        {
                                            @foreach(var a in articleCategory)
                                            {
                                                <tr>
                                                    <td>@a.CategoryName</td>
                                                    <td>@a.Description</td>
                                                    <td>@a.CreatedDate.ToString("dd/MM/yyyy")</td>
                                                    @switch (a.UpdatedDate)
                                                    {
                                                        case null:
                                                            <td>Không có</td>
                                                            break;
                                                        case not null:
                                                            <td>@a.UpdatedDate?.ToString("dd/MM/yyyy")</td>
                                                            break;
                                                    }
                                                    @switch (a.ParentCategory)
                                                    {
                                                        case null:
                                                            <td>Không có</td>
                                                            break;
                                                            case not null:
                                                            <td>@a.ParentCategory.CategoryName</td>
                                                            break;
                                                    }
                                                    <td>@a.OrderLevel</td>
                                                    <td>
                                                        <div class="action_btns d-flex">
                                                            <a href="#" class="action_btn mr_10"> <i class="far fa-edit"></i> </a>
                                                            <a href="#" class="action_btn"> <i class="fas fa-trash"></i> </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>