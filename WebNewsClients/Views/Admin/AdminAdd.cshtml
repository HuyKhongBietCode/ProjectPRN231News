@using WebNewsAPIs.Dtos;
@model AddUserDto;
@{
    Layout = "_LayoutMainAdmin";
}
<div class="main_content_iner overly_inner ">
    <div class="container-fluid p-0 ">

        <div class="row">
            <div class="col-12">
                <div class="page_title_box d-flex flex-wrap align-items-center justify-content-between">
                    <div class="page_title_left d-flex align-items-center">
                        <h3 class="f_s_25 f_w_700 dark_text mr_30">
                            <a class="large_logo" asp-action="Index" asp-controller="Admin">
                                <i class="fa-solid fa-house-chimney"></i>
                            </a>
                        </h3>
                        <ol class="breadcrumb page_bradcam mb-0">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Quản lý</a></li>
                            <li class="breadcrumb-item active">Thêm quản lý mới</li>
                        </ol>
                    </div>
                    <div class="page_title_right">
                        <div class="page_date_button d-flex align-items-center">
                            <img src="img/icon/calender_icon.svg" alt>
                            <span class="text-primary">Ngày hôm nay : </span> @DateTime.Now.ToString("dd/MM/yyyy")

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Thêm quản lý mới </h3>
                            </div>
                        </div>
                    </div>
                    <div class="white_card_body">
                        <form method="post">
                            <div class="row">

                                <div class="form-group col-lg-6 mt-2">
                                    <label asp-for="@Model.Username" class="control-label mb-2"></label>
                                    <input type="email" asp-for="@Model.Username" class="form-control" placeholder="Nhập tài khoản..." />
                                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                                </div>

                                <div class="form-group col-lg-6 mt-2">
                                    <label asp-for="@Model.Password" class="control-label mb-2"></label>
                                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Nhập mật khẩu bảo mật..." />
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6 mt-2">
                                    <label asp-for="@Model.DisplayName" class="control-label mb-2"></label>
                                    <input asp-for="@Model.DisplayName" class="form-control" placeholder="Nhập tên hiển thị..." />
                                    <span asp-validation-for="@Model.DisplayName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6 mt-2">
                                    <label asp-for="@Model.Address" class="control-label mb-2"></label>
                                    <input asp-for="@Model.Address" class="form-control" placeholder="Nhập địa chỉ..." />
                                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6 mt-2">
                                    <label asp-for="@Model.PhoneNumber" class="control-label mb-2"></label>
                                    <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại..." />
                                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6 mt-2">
                                    <label asp-for="@Model.DateOfBirth" class="control-label mb-2"></label>
                                    <input asp-for="@Model.DateOfBirth" class="form-control" placeholder="Nhập ngày sinh ..." />
                                    <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6">
                                    <label for="Gender" class="form-label mt-4">Gender</label>
                                    <select id="Gender" name="Gender" class="nice_Select2 nice_Select_line wide" style="display: none;">
                                        <option value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                        <option value="Khác">Khác</option>
                                    </select>
                                </div>
                                <div class="form-group col-lg-6 mt-5 text-center">
                                    <input type="hidden" asp-for="@Model.RoleId" class="form-control" value="69FCDAF8-1181-4098-9D2E-0DF5D5A07D1D" />
                                </div>

                                <div class="col-2">
                                    <div class="create_report_btn mt_30">
                                        <button asp-controller="Admin" asp-action="AddNewAdmin" class="btn_1 radius_btn d-block text-center">Thêm quản lý</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
    @await Html.PartialAsync("_ToastMessage");
}