@{
    Layout = "_LayoutMainAdmin";
}
@using WebNewsAPIs.Dtos;
@model AddUserDto;
<div class="main_content_iner overly_inner ">
    <div class="container-fluid p-0 ">

        <div class="row">
            <div class="col-12">
                <div class="page_title_box d-flex flex-wrap align-items-center justify-content-between">
                    <div class="page_title_left d-flex align-items-center">
                        <h3 class="f_s_25 f_w_700 dark_text mr_30">Trang chủ</h3>
                        <ol class="breadcrumb page_bradcam mb-0">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Người dùng</a></li>
                            <li class="breadcrumb-item active">Thêm người dùng mới</li>
                        </ol>
                    </div>
                    <div class="page_title_right">
                        <div class="page_date_button d-flex align-items-center">
                            <img src="img/icon/calender_icon.svg" alt>
                            Ghi ngày tháng hiện tại
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Thêm người dùng mới </h3>
                            </div>
                        </div>
                    </div>
                    <form method="post">
                        @if (ViewBag.Message != null)
                        {
                            <h2 class="btn btn-danger">@ViewBag.Message</h2>
                        }
                        <div class="white_card_body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="common_input mb_15">
                                        <input asp-for="@Model.Username" type="text" placeholder="Tài khoản">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="common_input mb_15">
                                        <input asp-for="@Model.Password" type="password" placeholder="Mật khẩu">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="common_input mb_15">
                                        <input asp-for="@Model.DisplayName" type="text" placeholder="Họ và tên">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="common_input mb_15">
                                        <input asp-for="@Model.Address" type="text" placeholder="Địa chỉ">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="common_input mb_15">
                                        <input asp-for="@Model.PhoneNumber" type="text" placeholder="Số điện thoại">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="common_input mb_15">
                                        <input asp-for="@Model.DateOfBirth" type="date" placeholder="Ngày sinh">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <select asp-for="@Model.Gender" class="nice_Select2 nice_Select_line wide" style="display: none;">
                                        <option value="0">Giới tính</option>
                                        <option value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                    </select>
                                </div>
                                <div class="col-lg-6">
                                    <select asp-for="@Model.RoleId" class="nice_Select2 nice_Select_line wide" style="display: none;">
                                        <option  value="179D557C-D9CC-4504-B869-A4319792F631">Người dùng</option>
                                        <option  value="90293A39-475C-44BC-8506-DAEA10E80384">Tác giả</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <div class="create_report_btn mt_30">
                                        <button asp-controller="Admin" asp-action="AddNewUser" type="submit" class="btn_1 radius_btn d-block text-center">Thêm người dùng</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>