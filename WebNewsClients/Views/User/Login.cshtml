 @using WebNewsAPIs.Dtos;
 @model AddUserDto;
@{
    Layout = "_LayoutLogin";
}
<div class="form-body">
    <div class="website-logo">
        <a href="index.html">
            <div class="d-flex justify-content-between align-items-center text-center">
                <div>
                    <button class="btn btn-outline-primary m-3">
                        <a asp-controller="Home" asp-action="Index" class="text-bg-outline-primary text-decoration-none">Go Back Home</a>
                    </button>


                </div>
                <div class="logo">
                    <object data="~/images/logo-light.svg" type="image/svg+xml" class="bg-primary" width="100" height="50">
                        Your browser does not support SVG
                    </object>
                </div>

            </div>
        </a>
    </div>
    <div class="row">
        <div class="img-holder">
            <div class="bg"></div>
            <div class="info-holder">
                <object data="~/images/graphic1.svg" type="image/svg+xml"  width="500" height="600">
                    Your browser does not support SVG
                </object>
            </div>
        </div>
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Get more things done with Loggin platform.</h3>
                    <p>Access to the most powerfull tool in the entire design and web industry.</p>
                    <div class="page-links">
                        <a href="#" class="active">Login</a><a asp-controller="User" asp-action="Register">Register</a>
                    </div>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Username" class="control-label"></label>
                            <input type="email" asp-for="@Model.Username" class="form-control" placeholder="E-mail Address" />
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Password" class="control-label"></label>
                            <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="form-button">
                            <button asp-controller="User" asp-action="LoginPost" id="submit" type="submit" class="ibtn">Login</button>
                            <a asp-controller="User" asp-action="ResetPassword">Forget password?</a>
                        </div>
                    </form>
                    <div class="other-links">
                        <span>Or login with</span><a href="#">Facebook</a><a href="#">Google</a><a href="#">Linkedin</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
    @await Html.PartialAsync("_ToastMessage");
}